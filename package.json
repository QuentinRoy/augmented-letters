{
  "name": "augmented-letters",
  "version": "0.1.0",
  "type": "module",
  "description": "A library to run Augmented Letters in a browser.",
  "keywords": [
    "Augmented Letters",
    "menu",
    "interaction",
    "shortcut"
  ],
  "scripts": {
    "build:modules": "tsc -p tsconfig.json",
    "build:browser": "esbuild src/main.ts --bundle --minify --sourcemap=external --outfile=dist/browser/al.js",
    "build": "yarn build:modules && yarn build:browser",
    "dev": "esbuild src/main.ts --bundle --outfile=dist/browser/al.js"
  },
  "exports": {
    "./*": {
      "import": "./dist/modules/*",
      "types": "./dist/modules/*"
    },
    ".": {
      "default": "./dist/browser/al.js"
    }
  },
  "repository": "git@github.com:QuentinRoy/augmented-letters.git",
  "author": "Quentin Roy <hi@quentinroy.fr>",
  "contributors": [
    "Sylvain Malacria <sylvain.malacria@inria.fr>"
  ],
  "license": "MIT",
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "esbuild": "^0.14.29",
    "typescript": "^4.6.3"
  }
}
